import pygame, sys, random

from pygame.locals import *

mainClock = pygame.time.Clock()

# -- Define Screen

screen = pygame.display.set_mode((500,500))

white = (255,255,255)
black=(0,0,0)
green=(0,255,0)

def collision_test(rect,terrain):
  collisions = []
  for tile in terrain:
    if rect.colliderect(tile):
      collisions.append(tile)
      
  return collisions
  
def move(rect,movement,terrain):
  
  rect.x += movement[0]
  collisions = collision_test(rect,terrain)
  for tile in collisions:
    if movement[0] > 0:
      rect.right = tile.left
    elif movement[0] < 0:
      rect.left = tile.right
      
  rect.y += movement[1]
  collisions = collision_test(rect,terrain)
  for tile in collisions:
    if movement[1] > 0:
      rect.bottom = tile.top
    elif movement[1] < 0:
      rect.top = tile.bottom
  return rect
        

true_scroll = [0,0]  

tea = pygame.Rect(250,250,20,20)


right_pressed = False
left_pressed = False
up_pressed = False
down_pressed = False

run = True
while run:
  
  screen.fill(black)
  
  movement = [0,0]
  
  if up_pressed == True:
    movement[1] -= 1
  if down_pressed == True:
    movement[1] += 1
  if left_pressed == True:
    movement[0] -= 1
  if right_pressed == True:
    movement[0] += 1
  
  # -- scrolling
  
  true_scroll[0] += (tea.x - true_scroll[0]-250)/20
  true_scroll[1] += (tea.y - true_scroll[1]-250)/5
  scroll = [0,0]
  scroll[0] = int(true_scroll[0])
  scroll[1] = int(true_scroll[1])
  
  terrain = [pygame.Rect(200-scroll[0],350-scroll[1],50,50)]
  # pygame.Rect(260-scroll[0],320-scroll[1],50,50)
    
  tea = move(tea,movement,terrain)
  pygame.draw.rect(screen,white,tea)
  
  for tile in terrain:
    pygame.draw.rect(screen,green,tile)
  
  for event in pygame.event.get():
    
    if event.type == pygame.KEYDOWN:
      if event.key == K_UP:
        up_pressed = True
      if event.key == K_DOWN:
        down_pressed = True
      if event.key == K_LEFT:
        left_pressed = True
      if event.key == K_RIGHT:
        right_pressed = True
        
    if event.type == pygame.KEYUP:
      if event.key == K_UP:
        up_pressed = False
      if event.key == K_DOWN:
        down_pressed = False 
      if event.key == K_LEFT:
        left_pressed = False
      if event.key == K_RIGHT:
        right_pressed = False

      
    
    if event.type == pygame.QUIT:
      run = False
      pygame.quit()
      
  pygame.display.update()
  mainClock.tick(60)
    

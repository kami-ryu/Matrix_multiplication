import pygame, sys, random

from pygame.locals import *

mainClock = pygame.time.Clock()

# -- Define Screen

screen = pygame.display.set_mode((500,500))

white = (255,255,255)
black=(0,0,0)
green=(0,255,0)

def collision_test(rect,terrain):
  collisions = []
  for tile in terrain:
    if rect.colliderect(tile):
      collisions.append(tile)
      
  return collisions
  
def move(rect,movement,terrain):
  rect.x += movement[0]
  collisions = collision_test(rect,terrain)
  for tile in collisions:
    if movement[0] > 0:
      rect.right = tile.left
    if movement[0] < 0:
      rect.left = tile.right
  rect.y += movement[1]
  collisions = collision_test(rect,terrain)
  for tile in collisions:
    if movement[1] > 0:
      rect.top = tile.bottom
    if movement[1] < 0:
      rect.bottom = tile.top
  return rect
        
        
  

tea = pygame.Rect(250,250,20,20)
terrain = [pygame.Rect(200,350,50,50),pygame.Rect(260,320,50,50)]

right_pressed = False
left_pressed = False
up_pressed = False
down_pressed = False

run = True
while run:
  
  screen.fill(black)
  
  
  
  movement = [0,0]
  
  if up_pressed:
    movement[1] -= 0.5
    
  if down_pressed:
    movement[1] += 0.5
    
  if left_pressed:
    movement[0] += 0.5
    
  if right_pressed:
    movement[0] -= 0.5
    
  tea = move(tea,movement,terrain)
  pygame.draw.rect(screen,white,tea)
  
  for event in pygame.event.get():
    
    if event.type == pygame.KEYDOWN:
      if event.key == K_UP:
        up_pressed = True
        
    if event.type == pygame.KEYUP:
      if event.key == K_UP:
        up_pressed = False
        
    if event.type == pygame.KEYDOWN:
      if event.key == K_DOWN:
        down_pressed = True
        
    if event.type == pygame.KEYUP:
      if event.key == K_DOWN:
        down_pressed = False
        
    if event.type == pygame.KEYDOWN:
      if event.key == K_LEFT:
        left_pressed = True
        
    if event.type == pygame.KEYUP:
      if event.key == K_LEFT:
        left_pressed = False
    
    if event.type == pygame.KEYDOWN:
      if event.key == K_RIGHT:
        right_pressed = True
        
    if event.type == pygame.KEYUP:
      if event.key == K_RIGHT:
        right_pressed = False
    
    if event.type == pygame.QUIT:
      run = False
      pygame.quit()
      
    pygame.display.update()
    mainClock.tick(60)
    
